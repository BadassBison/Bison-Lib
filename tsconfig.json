{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "noImplicitAny": false,
    "strict": false,
    "module": "esNext",
    "target": "es2015",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*"
  ]
}